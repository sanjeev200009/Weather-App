<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ADEFFF"
    tools:context=".MainActivity"
    android:id="@+id/main">


    <ImageView
        android:id="@+id/illustration"
        android:layout_width="463dp"
        android:layout_height="404dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="Illustration"
        android:src="@drawable/_982820_3324648" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Weather Tracker and Forecast"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/font1"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Stay updated with real-time weather data, forecasts, and alerts tailored to your location!"
        android:textColor="#666666"
        android:textSize="14sp"
        android:fontFamily="@font/font1"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Letâ€™s Start"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/font1" />


</LinearLayout>