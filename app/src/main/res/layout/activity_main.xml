<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    tools:context=".MainActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/weatherInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Weather Information"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <!-- Weather Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Weather Icon"
        app:layout_constraintTop_toBottomOf="@id/weatherInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/weather_rafiki" />

    <!-- Buttons Section -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btnNewYork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:text="New York"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnLondon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:text="London"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnTokyo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:text="Tokyo"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnColombo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:text="Colombo"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnDubai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/modern_button"
                android:padding="12dp"
                android:text="Dubai"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/back_button"
                android:padding="12dp"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_back_arrow"
                android:drawablePadding="8dp"
                android:elevation="4dp"
                android:contentDescription="Back Button"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

    <!-- Footer Section -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Stay updated with the latest weather info!"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
